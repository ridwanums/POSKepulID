<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.WalktroughActivity">
    
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/text_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:gravity="center"
        android:text="@string/skip"
        android:textColor="@color/brown"
        android:textSize="@dimen/_12sdp"/>
    <ImageView
        android:id="@+id/image_slide1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/text_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/slide1"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/image_slide2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/text_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/slide2"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/image_slide3"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/text_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/slide3"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>